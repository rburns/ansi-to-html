{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "mocha": true
  },
  "parserOptions": {
    "ecmaVersion": "2018"
  },
  "extends": "eslint:recommended",
  "rules": {
    "strict": ["error"],
    "indent": ["error", 4, {"SwitchCase": 1}],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "semi": [
      "error",
      "always"
    ]
  }
}
